<table class="table table-striped"> 
<% users.each do |user| %>
<tr>
	<td>
		<a href="/users/<%= user.id %>">
			<img class="img-thumbnail" height="128" width="128"  src="/images/<%= user.image_url %>" >
		</a>
	<br>
	<%= user.name %> 
	<br> 
		<form action="/follow/<%= user.id %>" accept-charset="UTF-8" method="post">
				<input type="submit" name="commit" value="Follow!" />
		</form>
	</td>

	<td>
	<ul>
	<li>Tweets: <%= user.tweets.count %></li>
	<li>Followers: <%= user.followers.count %></li>
	<li>Followees: <%= user.followees.count %></li>
	</ul>
	</td>
</tr>
<% end %>
</table>